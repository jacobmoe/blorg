<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="description" content="Jacob Moeller">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>the blorg</title>

  <link rel="stylesheet" href="/stylesheets/application.css">
  <link rel="stylesheet" href="/stylesheets/vendor/bootstrap.min.css">

  <script data-main="javascripts/main" src="javascripts/vendor/require-2.1.11.min.js"></script>

</head>

<body>

  <div class="header">
    <h1>THE BLORG!</h1>
  </div>

  <div class="container-fluid">
    <div class="row body-content">
      <div class="col-sm-2 sidebar">
        {{template "sidebar"}}
      </div>

      <div class="col-sm-10 main">
        <div class="posts"></div>
      </div>
    </div>
  </div>

  <script type="text/template" id="posts-template">
    <% _.each(posts, function (post) { %>
      <div class="post">
        <h1><%= post.get("title") %></h1>
        <h5><%= post.get("date") %></h5>
        <% _.each(post.get('sections'), function (section) { %>
          <p><%= section %></p>
        <% }); %>
      </div>
    <% }); %>
  </script>
 
</body>
</html>
