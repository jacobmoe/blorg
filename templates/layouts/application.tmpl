<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="description" content="Jacob Moeller">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>the blorg</title>

  <link rel="stylesheet" href="/stylesheets/application.css">
  <link rel="stylesheet" href="/stylesheets/vendor/bootstrap.min.css">

  <script data-main="javascripts/main" src="javascripts/vendor/require-2.1.11.min.js"></script>

</head>

<body>

  <div class="container-fluid">
    <div class="row body-content">
      <div class="col-sm-2 sidebar">
        {{template "sidebar"}}
      </div>

      <div class="col-sm-10 main">
        <div class="main-content-body-header">
          <h1>THE BLORG!</h1>
        </div>

        {{ yield }}

      </div>
    </div>
  </div>

  <script type="text/template" id="posts-template">
    <div class="posts">
      <% _.each(posts, function (post) { %>
        <% _.each(post.get('subtrees'), function (subtree) { %>
          <% _.each(subtree.nodes, function (node) { %>
            <div class="post">
              <% if (node.position > 0) { %>
                <h<%= node.position %> class="headline">
                  <%= node.headline %>
                </h<%= node.position %>>
              <% } %>
              <div class="section">
                <% _.each(node.sections, function (p) { %>
                  <p><%= p %></p>
                <% }); %>
              </div>
            </div>
          <% }); %>
        <% }); %>
      <% }); %>
    </div>
  </script>
 
</body>
</html>
